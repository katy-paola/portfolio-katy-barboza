---
const jobs = [
  {
    company: "Igloolab",
    position: "WebMaster",
    period: "Mar. 2024 - Actualidad",
  },
  {
    company: "Asis√≠ Felicia",
    position: "Voluntario JS Conf Colombia",
    period: "Jun. 2023 - Nov. 2023",
  },
];
---

<section id="experience" class="flex flex-col p-4 lg:py-8 lg:px-56 scroll-mt-[52px] lg:scroll-mt-[108px] text-white bg-dark-blur gap-4 lg:gap-8">
  <h2 class="text-base lg:text-2xl bg-light p-2 lg:p-4 font-code font-semibold">// Experiencia</h2>
  <ul class="flex flex-col lg:flex-row gap-2 lg:gap-4">
    {
      jobs.map((job) => (
        <li>
          <article class="flex flex-col bg-light border-solid border-2 p-3 border-light hover:bg-hover text-sm lg:text-base">
            <h3>{job.company}</h3>
            <p>{job.position}</p>
            <p>{job.period}</p>
          </article>
        </li>
      ))
    }
  </ul>
</section>
